{
  "name": "arbitrage-deployment",
  "version": "1.0.0",
  "description": "Deployment package for CrossDexArbitrage smart contract",
  "type": "commonjs",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "node scripts/deployContract.js",
    "deployHardhat": "npx hardhat run scripts/deployWithHardhat.js --network avalanche",
    "deployHardhatWithUtils": "npx hardhat run scripts/deployWithHardhatWithUtils.js --network avalanche",
    "configureFlashLoan": "node scripts/configureFlashLoan.js",
    "configureUniswap": "node scripts/configureUniswap.js",
    "configureTraderJoe": "node scripts/configureTraderJoe.js",
    "configureTokens": "node scripts/configureTokens.js",
    "configurePools": "node scripts/configurePools.js",
    "approveTokens": "node scripts/approveTokens.js",
    "approveFlashLoan": "node scripts/approveFlashLoan",
    "checkAllowances": "node scripts/checkAllowances.js",
    "verifyOwnership": "node scripts/verifyOwnership.js",
    "extractByteCode": "node scripts/extractByteCode.js",
    "testOwnership": "node scripts/testOwnership.js",
    "verifyAll": "node scripts/verifyAllConfigs.js",
    "resetNonce": "node scripts/resetNonce.js",
    "getBlockNumber": "node scripts/getBlockNumber.js",
    "verifyContract": "node scripts/verifyContract.js --verbose",
    "testOwner": "node scripts/testOwner.js",
    "getContractSize": "hardhat size-contracts"
  },
  "dependencies": {
    "@balancer-labs/sdk": "^1.1.6",
    "@balancer-labs/v2-interfaces": "0.4.0",
    "@openzeppelin/contracts": "^4.9.6",
    "dotenv": "^16.3.1",
    "viem": "^1.19.13",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomiclabs/hardhat-ethers": "2.2.2",
    "@traderjoe-xyz/sdk-core": "^1.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.4",
    "@uniswap/sdk-core": "^4.0.9",
    "chai": "^4.3.10",
    "ethers": "5.7.2",
    "hardhat": "^2.22.18",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.2",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "packageManager": "yarn@4.6.0"
}
